@model IEnumerable<EventWebApp.Models.Event>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Ürituste nimekiri</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Event" asp-action="Create" class="btn btn-primary">Loo uus üritus</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Ürituse nimi
                    </th>
                    <th>
                        Aeg
                    </th>
                    <th>
                        Koht
                    </th>
                    <th>
                        Info
                    </th>
              
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="25%">@item.Name</td>
                        <td width="25%">@item.StartDate</td>
                        <td width="25%">@item.Location</td>
                        <td width="25%">@item.Details</td>
                        

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Üritused puuduvad</p>
    }

</div>