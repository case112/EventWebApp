@model IEnumerable<EventWebApp.Models.Event>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Ürituste nimekiri</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Event" asp-action="Create" class="btn btn-primary">Loo uus üritus</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Ürituse nimi
                    </th>
                    <th>
                        Aeg
                    </th>
                    <th>
                        Koht
                    </th>
                    <th>
                        Info
                    </th>
                    <th>
                        Tegevus1
                    </th>
                    <th>
                        Tegevus2
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="20%">
                        <a asp-controller="Event" asp-action="Details" asp-route-Id="@obj.Id">@obj.Id</a>
                    </td>
                    <td width="20%">@obj.StartDate</td>
                    <td width="20%">@obj.Location</td>
                    <td width="20%">@obj.Details</td>
                    <td width="10%">
                        
                        @Html.ActionLink("Lisa osaleja", "Create", "Attendee", new { eventId = obj.Id })
                    </td>
                    <td width="10%">
                        <form asp-action="Delete" asp-route-Id="@obj.Id">
                            <button type="submit" class="btn btn-danger">
                                Kustuta
                            </button>
                        </form>
                    </td>


                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Üritused puuduvad</p>
    }

</div>