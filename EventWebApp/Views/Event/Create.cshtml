@model EventWebApp.Models.Event

<form method="post" asp-action="Create">
    <div class="border p-5">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Ürituse lisamine</h2>
        </div>
        
            <div class="container">

                
                <div class="form-row">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-row">

                    <label asp-for="StartDate" class="control-label"></label>
                    @Html.TextBoxFor(m => m.StartDate, "{0:dd-MM-yyyy}", new { @class = "form-control", id = "datepicker" })
                    
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                    <div class="form-row">
                        <label asp-for="Location"></label>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="form-row">
                        <label asp-for="Details"></label>
                        <input asp-for="Details" class="form-control" />
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
               

            </div>
            <div class="form-group row">
                <div>
                    <div class="col">
                        <input type="submit" class="btn btn-info" value="Salvesta" />
                    </div>
                    <div class="col">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Katkesta</a>
                    </div>
                </div>
            </div>

    </div>
    
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
        <partial name="_DateTimePicker" />

        <script>
            
        </script>
    }
}
