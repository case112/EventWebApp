@model EventWebApp.Models.Event

@{
    ViewData["Title"] = "Details";
}

<div class="border p-5">
    <div class="form-group row">
        <h2 class="text-black-50 pl-3">Üritus</h2>
    </div>

    <div class="container">


        <div class="row">
            <p>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</p>
        </div>

        <div class="row">
            <p>@Html.DisplayNameFor(model => model.StartDate): @Html.DisplayFor(model => model.StartDate)</p>
        </div>

        <div class="row">
            <p>@Html.DisplayNameFor(model => model.Location): @Html.DisplayFor(model => model.Location)</p>
        </div>

        <div class="row">
            <p>@Html.DisplayNameFor(model => model.Details): @Html.DisplayFor(model => model.Details)</p>
        </div>

  



    </div>
    <div class="form-group row">
        <div>
            <div class="col">
                <input type="submit" class="btn btn-info" value="Salvesta" />
            </div>
            <div class="col">
                <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Katkesta</a>
            </div>
        </div>
    </div>

</div>




@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}
