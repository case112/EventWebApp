@model EventWebApp.Models.Event

<form method="post" asp-action="Create">
    <div class="border p-5">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Ürituse lisamine</h2>
        </div>
        <div class="row">
            <div class="container">

                <div class="form-group row">
                    <div>
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div>
                        <label asp-for="StartDate" class="control-label"></label>
                        <div class='input-group date' id='datepicker'>
                            <input asp-for="StartDate" type="text" class="form-control" value="@DateTime.Now.ToString("MM/dd/yyyy HH:mm")" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div>
                        <label asp-for="Location"></label>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Details"></label>
                        <input asp-for="Details" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info" value="Salvesta" />
                    </div>
                    <div class="col">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Katkesta</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
        <partial name="_DateTimePicker" />
    }
}
